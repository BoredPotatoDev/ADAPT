<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1500"
        motion:autoTransition="animateToEnd"
        motion:motionInterpolator="easeIn">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/adaptWord"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="251dp"
            android:layout_height="140dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:transitionEasing="cubic(0.81,0,0.4,0.61)"
            android:alpha="0"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/adaptIcon"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="250dp"
            android:layout_height="165dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:transitionEasing="cubic(0.2,0,0.2,0.19)"
            android:visibility="invisible"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="251dp"
            android:layout_height="140dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/adaptWord"
            motion:layout_constraintHorizontal_bias="1.0"
            android:alpha="1"
            motion:transitionEasing="cubic(1,0,0.2,1)"
            android:layout_marginEnd="20dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="273dp"
            android:layout_height="170dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/adaptIcon"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:transitionEasing="cubic(0.8,0.02,0,1)"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_editor_absoluteY="278dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="-40dp" />
    </ConstraintSet>
</MotionScene>